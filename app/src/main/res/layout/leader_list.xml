<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/usernameLead"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="User"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@color/yellow_color"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/buttonConLead"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Congrat"
            android:theme="@style/Button1Style"
            android:textSize="12sp"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/userScoreLead"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@color/text_color1"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>



        <TextView
            android:id="@+id/userWordLead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Highest Score Word"
            android:textColor="@color/text_color1"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/userTimeLead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@color/text_color1"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>

    </GridLayout>

    </LinearLayout>

</ScrollView>
